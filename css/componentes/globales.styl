// No son necesario los corchetes, ni el punto y coma

// Declarando variables
Fuente1 = 'Lato', sans-serif
Fuente2 = 'Oswald', sans-serif
color-primario = #333
color-secundario = #8841da
color-claro = #FFF

// Declarando mixins
contenedor()
	display flex
	width 96%
	margin 0 auto
	padding 30px 0

caja-sombra()
	background-color color-claro
	box-shadow 0 20px 33px 0 rgba(0,0,0,0.20) 

// Declarando funciones
opacidad(color, cantidad)
	alpha(color, cantidad)

* 
	box-sizing border-box

body
	margin 0
	font-family Fuente1
	color color-primario